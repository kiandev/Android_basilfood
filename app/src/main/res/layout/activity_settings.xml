<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity"
    android:background="@color/colorBackgroundAllActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="تنظیمات"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:gravity="right|center"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/medium"
            android:layout_toLeftOf="@+id/btnBack"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/switch_general"
                            android:orientation="horizontal"
                            android:gravity="right|center"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/light"
                                android:gravity="center"
                                android:id="@+id/txt_general"
                                android:text="فعال است"
                                android:textColor="@color/colorGray600"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="دریافت اطلاعیه های عمومی :"
                                android:textColor="@color/colorGray800"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/switch_general"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentRight="true"/>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray200"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/switch_news"
                            android:orientation="horizontal"
                            android:gravity="right|center"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/light"
                                android:gravity="center"
                                android:id="@+id/txt_news"
                                android:text="فعال است"
                                android:textColor="@color/colorGray600"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="دریافت اطلاعیه های مربوط به رویدادها :"
                                android:textColor="@color/colorGray800"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/switch_news"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentRight="true"/>


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>